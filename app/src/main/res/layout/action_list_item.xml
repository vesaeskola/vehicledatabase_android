<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/row1_col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Row1_Col1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/row2_col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Row2_Col1"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/row1_col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Row1_Col2"
            android:textSize="18sp"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/row2_col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Row2_Col2"
            android:textSize="14sp" />

        <!--
        <Button
            android:id="@+id/vehicle_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="openVehicle"
            android:text="Open" />
            -->
    </LinearLayout>

</RelativeLayout>

